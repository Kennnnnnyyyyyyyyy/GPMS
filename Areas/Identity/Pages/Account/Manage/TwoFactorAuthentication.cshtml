@page
@model Gate_Pass_management.Areas.Identity.Pages.Account.Manage.TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Two-factor authentication";
}
<h3>@ViewData["Title"]</h3>
<p>Two-factor authentication status: <strong>@(Model.Is2faEnabled ? "Enabled" : "Disabled")</strong></p>
<p>Authenticator key configured: <strong>@(Model.HasAuthenticator ? "Yes" : "No")</strong></p>
<div class="mt-3">
    <a asp-page="./EnableAuthenticator" class="btn btn-primary">Enable authenticator app</a>
    <a asp-page="./ResetAuthenticator" class="btn btn-outline-danger">Reset authenticator</a>
    <a asp-page="./GenerateRecoveryCodes" class="btn btn-outline-secondary">Generate recovery codes</a>
</div>
