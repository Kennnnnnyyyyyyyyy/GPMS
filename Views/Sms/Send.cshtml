@{
    ViewData["Title"] = "Send SMS";
}
<h1>Send SMS</h1>
<form asp-action="Send" method="post" class="row g-3">
    <div class="col-md-4">
        <label class="form-label">Phone Number</label>
        <input name="to" class="form-control" placeholder="+1234567890" required />
        <div class="form-text">Include country code (e.g., +91 for India)</div>
    </div>
    <div class="col-md-12">
        <label class="form-label">Message</label>
        <textarea name="message" class="form-control" rows="4" maxlength="160" placeholder="Your message here..." required></textarea>
        <div class="form-text">Max 160 characters for standard SMS</div>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Send SMS</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }
