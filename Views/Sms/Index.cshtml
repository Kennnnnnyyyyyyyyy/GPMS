@model IEnumerable<Gate_Pass_management.Models.SmsMessage>
@{
    ViewData["Title"] = "SMS Messages";
}
<h1>SMS Messages</h1>
<p>
    <a class="btn btn-primary" asp-action="Send">Send SMS</a>
</p>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>To</th>
            <th>Message</th>
            <th>Status</th>
            <th>Created</th>
            <th>Sent</th>
            <th>Error</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var msg in Model)
    {
        <tr class="@(msg.Status == "Failed" ? "table-danger" : msg.Status == "delivered" ? "table-success" : "")">
            <td>@msg.To</td>
            <td class="text-truncate" style="max-width: 200px;">@msg.Body</td>
            <td>@msg.Status</td>
            <td>@msg.CreatedUtc.ToLocalTime():g</td>
            <td>@(msg.SentUtc?.ToLocalTime().ToString("g") ?? "-")</td>
            <td class="text-danger small">@msg.Error</td>
        </tr>
    }
    </tbody>
</table>
