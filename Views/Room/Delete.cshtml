@model Room
@{
    ViewData["Title"] = "Delete Room";
}
<h1>Delete Room</h1>
<h5 class="text-danger">Are you sure you want to delete this room?</h5>
<hr />
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Location</dt>
    <dd class="col-sm-10">@(Model.Location ?? "Main Office")</dd>
    <dt class="col-sm-2">Capacity</dt>
    <dd class="col-sm-10">@Model.Capacity</dd>
    <dt class="col-sm-2">Active</dt>
    <dd class="col-sm-10">@(Model.IsActive ? "Yes" : "No")</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
