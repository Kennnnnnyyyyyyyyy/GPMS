@*
    Live Visitors Counter Card - Shows real-time count of visitors currently inside
*@

<div class="card h-100 live-visitors-card">
    <div class="card-body text-center">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <h6 class="card-title text-muted mb-0">Visitors Inside Now</h6>
            <span id="connectionStatus" class="connection-status badge badge-sm">
                <!-- Connection status will be updated by JavaScript -->
            </span>
        </div>
        
        <div class="live-count-display">
            <h2 class="display-4 text-primary mb-0" id="liveVisitorsCount">
                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
            </h2>
            <small class="text-muted">auto-updating</small>
        </div>
        
        <div class="mt-3">
            <button type="button" class="btn btn-outline-primary btn-sm" onclick="window.liveVisitorsCounter?.refresh()">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
        </div>
    </div>
</div>

<style>
.live-visitors-card .live-count-display {
    padding: 1rem 0;
}

.connection-status {
    font-size: 0.7rem;
    padding: 0.25rem 0.5rem;
    border-radius: 10px;
    text-transform: uppercase;
    font-weight: 600;
    min-width: 60px;
}

.connection-status.live {
    background-color: #28a745;
    color: white;
}

.connection-status.reconnecting {
    background-color: #ffc107;
    color: #212529;
    animation: pulse 1.5s infinite;
}

.connection-status.offline {
    background-color: #6c757d;
    color: white;
}

@@keyframes pulse {
    0% { opacity: 1; }
    50% { opacity: 0.5; }
    100% { opacity: 1; }
}

.live-visitors-card {
    border-left: 4px solid #007bff;
    transition: box-shadow 0.3s ease;
}

.live-visitors-card:hover {
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
}

#liveVisitorsCount {
    font-weight: 700;
    transition: all 0.3s ease;
}

#liveVisitorsCount[data-last-updated] {
    animation: countUpdate 0.5s ease;
}

@@keyframes countUpdate {
    0% { transform: scale(1); }
    50% { transform: scale(1.1); color: #28a745; }
    100% { transform: scale(1); }
}
</style>

@section Scripts {
    <script src="~/lib/signalr/signalr.min.js"></script>
    <script src="~/js/liveVisitors.js"></script>
}
