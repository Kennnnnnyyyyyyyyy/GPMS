@model Gate_Pass_management.Controllers.LoginViewModel
@{
    ViewData["Title"] = "Admin Login";
}
<div class="row justify-content-center mt-5">
  <div class="col-md-4">
    <h3 class="mb-3">Admin Sign In</h3>
    
    <!-- Admin Credentials Info -->
    <div class="alert alert-warning" role="alert">
      <small><strong>Default Admin:</strong> admin / Admin@123</small><br>
      <small class="text-muted">2FA setup required after first login</small>
    </div>
    
    <form asp-action="AdminLogin" method="post">
      @Html.AntiForgeryToken()
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="ReturnUrl" />
      <div class="mb-3">
        <label asp-for="UserName" class="form-label"></label>
        <input asp-for="UserName" class="form-control" autocomplete="username" />
      </div>
      <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" type="password" autocomplete="current-password" />
      </div>
      <button type="submit" class="btn btn-danger w-100">Sign in as Admin</button>
      <p class="text-muted mt-2 mb-0" style="font-size: 0.9rem;">2FA is required for admin access.</p>
    </form>
    
    <div class="mt-3 text-center">
      <small class="text-muted">
        <a href="/Account/Login" class="text-decoration-none">Regular Login</a> | 
        <a href="https://github.com/Kennnnnnyyyyyyyyy/GPMS/blob/main/LOGIN.md" class="text-decoration-none" target="_blank">Help</a>
      </small>
    </div>
  </div>
</div>
