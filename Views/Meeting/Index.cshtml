@model IEnumerable<Gate_Pass_management.Models.Meeting>
@{
    ViewData["Title"] = "Meetings";
}
<h1>Meetings</h1>
<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <select name="roomId" class="form-select" onchange="this.form.submit()">
            <option value="">-- All Rooms --</option>
            @foreach (var r in (IEnumerable<Gate_Pass_management.Models.Room>)ViewBag.Rooms)
            {
                <option value="@r.Id" selected="@(ViewContext.RouteData.Values["roomId"]?.ToString() == r.Id.ToString() ? "selected" : null)">@r.Name (@(r.Location ?? "Main Office"))</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <a class="btn btn-primary" asp-action="Create">Create Meeting</a>
    </div>
</form>
<table class="table table-striped table-sm">
    <thead>
    <tr>
        <th>Title</th>
        <th>Room</th>
        <th>Start</th>
        <th>End</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var m in Model)
    {
        <tr>
            <td>@m.Title</td>
            <td>@m.Room?.Name</td>
            <td>@m.StartUtc.ToLocalTime():g</td>
            <td>@m.EndUtc.ToLocalTime():g</td>
            <td class="text-end">
                <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@m.Id">Edit</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@m.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
