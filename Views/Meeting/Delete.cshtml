@model Gate_Pass_management.Models.Meeting
@{
    ViewData["Title"] = "Delete Meeting";
}
<h1>Delete Meeting</h1>
<h5 class="text-danger">Are you sure you want to delete this meeting?</h5>
<dl class="row">
    <dt class="col-sm-2">Title</dt><dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Room</dt><dd class="col-sm-10">@Model.RoomId</dd>
    <dt class="col-sm-2">Start</dt><dd class="col-sm-10">@Model.StartUtc.ToLocalTime():g</dd>
    <dt class="col-sm-2">End</dt><dd class="col-sm-10">@Model.EndUtc.ToLocalTime():g</dd>
</dl>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger" type="submit">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
