<style>

/* Home page only overrides to remove any outer gaps */
body { margin-bottom: 0 !important; padding-top: 0 !important; }
/* Remove navbar seam on this page */
nav.navbar { box-shadow: none !important; border-bottom: 0 !important; }
/* Defensive: remove any border/shadow/margin that could render a thin line */
.navbar, .navbar * { border-bottom: 0 !important; box-shadow: none !important; }
#mainContent { margin-top: 0 !important; border-top: 0 !important; }
#mainContent > .container-fluid { margin-top: 0 !important; border-top: 0 !important; }

* {
  font-family: 'Poppins', sans-serif;
}

.home {
  /* full-bleed area, extends behind fixed navbar */
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-size: cover;
  background-position: center;
}

/* Edge-to-edge hero (remove white gutters on this page only) */
#mainContent { padding: 0 !important; }
#mainContent > .container-fluid { 
  padding-left: 0 !important; 
  padding-right: 0 !important; 
  background: transparent !important; 
  border: 0 !important; 
  box-shadow: none !important; 
  border-radius: 0 !important; 
}

.bg-video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: -1;
  pointer-events: none;
}

.home-container {
  background: #000000ba;
  position: absolute;
  top: 45%;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.home-container h3 {
  color: #fdfdfd;
  font-size: 45px;
  font-weight: 600;
}

/* paragraph styles removed (no paragraph shown on homepage) */

